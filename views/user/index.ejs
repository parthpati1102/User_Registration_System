<%- layout('/layouts/boilerplate.ejs') -%>
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <i class="bi bi-house-heart display-1 mb-4 opacity-75"></i>
                <h1 class="main-title">Welcome to the Registration System</h1>
                <p class="lead-text">
                    Your trusted platform for secure user registration and account management. 
                    Join our community today!
                </p>
                
                <% if (!user) { %>
                    <div class="mt-4">
                        <a href="/register" class="btn btn-light btn-custom btn-lg">
                            <i class="bi bi-person-plus me-2"></i>
                            Create Account
                        </a>
                        <a href="/login" class="btn btn-outline-light btn-custom btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Login
                        </a>
                    </div>
                <% } else { %>
                    <div class="alert alert-light d-inline-block mb-4">
                        <i class="bi bi-person-check-fill me-2 text-success"></i>
                        <strong>Hello, <%= user.name || user.username || 'User' %>!</strong> 
                        Welcome back to your account.
                    </div>
                    <br>
                    <a href="/index" class="btn btn-light btn-custom btn-lg">
                        <i class="bi bi-person me-2"></i>
                        View Profile
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Content Section -->
<section class="content-section">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-6 fw-bold mb-3">What We Offer</h2>
                <p class="lead text-muted">Simple, secure, and reliable registration system</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="feature-box">
                    <i class="bi bi-shield-check feature-icon"></i>
                    <h4 class="fw-bold mb-3">Secure Registration</h4>
                    <p class="text-muted">
                        Safe and secure user registration with encrypted data protection 
                        and privacy-first approach.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-box">
                    <i class="bi bi-person-gear feature-icon"></i>
                    <h4 class="fw-bold mb-3">Profile Management</h4>
                    <p class="text-muted">
                        Easy-to-use profile management system with photo uploads 
                        and personal information control.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-box">
                    <i class="bi bi-speedometer2 feature-icon"></i>
                    <h4 class="fw-bold mb-3">Fast & Simple</h4>
                    <p class="text-muted">
                        Quick registration process that gets you started in minutes, 
                        not hours. Simple and intuitive interface.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
