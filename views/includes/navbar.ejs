<div class="container">
  <nav class="navbar navbar-expand-lg navbar-custom mb-4">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand" href="/index">
            <i class="bi bi-house-heart me-2"></i>Home
        </a>
        
        <!-- Mobile toggle button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <div class="d-flex align-items-center ms-auto">
                <% if (!user) { %>
                    <!-- Guest User Buttons -->
                    <a href="/register" class="btn btn-primary btn-nav me-4">
                        <i class="bi bi-person-plus me-1"></i>Register
                    </a>
                    <a href="/login" class="btn btn-primary btn-nav">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                    </a>
                <% } else { %>
                    <!-- Authenticated User Section -->
                    <div class="user-section">
                        <img src="<%= user && user.profilePicture && user.profilePicture.url ? user.profilePicture.url : '/placeholder.svg?height=40&width=40' %>" 
                             alt="Profile Picture" 
                             class="rounded-circle profile-picture">
                        <!-- <span class="welcome-text">Welcome, <%= user.name || user.username %>!</span> -->
                        <a href="/logout" class="btn btn-danger btn-nav">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</nav>
</div>
